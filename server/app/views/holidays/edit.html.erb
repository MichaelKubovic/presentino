<%= form_tag holiday_path(@holiday.id), class: 'form-horizontal', method: 'put' %>
  <div class="form-group">
    <div class="col-xs-12">
      <label>Label</label>
      <input name="label" type="text" class="form-control" value="<%= @holiday.label %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12 col-sm-6">
      <label>Date from</label>
      <input name="date_from" type="text" class="form-control" value="<%= @holiday.date_from %>">
    </div>
    <div class="col-xs-12 col-sm-6">
      <label>Date to</label>
      <input name="date_to" type="text" class="form-control" value="<%= @holiday.date_to %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <button type="submit" class="btn btn-primary pull-right">Edit</button>
    </div>
  </div>
</form>
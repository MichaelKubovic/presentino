<table class="table">
  <thead>
    <tr>
      <th>Label</th>
      <th># presents</th>
      <th class="text-right">
        <a href="<%= new_holiday_path %>" class="btn btn-success btn-xs">New holiday</a>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.label %></td>
        <td>10</td>
        <td class="text-right">
          <a href="<%= edit_holiday_path(holiday) %>" class="btn btn-primary btn-xs">Edit</a>
          <a href="" class="btn btn-danger btn-xs">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>